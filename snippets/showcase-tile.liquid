<div>
  <a href="{{ object.url }}">
    {%- if object.featured_image != blank -%}
      <div class="{% unless crop == '' or crop == blank %}image-wrapper {{ crop }}{% endunless %}">
        {{ object.featured_image | image_url: width: 700 | image_tag: class: 'media-style' }}
      </div>
    {%- endif -%}
    <div class="title text-center">
      {{ object.title }}
    </div>
    {%- if object.metafields.custom.sub_title.value != blank -%}
      <div class="sub_title">
        {{ object.metafields.custom.sub_title.value }}
      </div>
    {%- endif -%}
  </a>
</div>
